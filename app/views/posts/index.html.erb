<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>文章</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div id="<%= dom_id post %>">
      <p>
        <h2><%= link_to post.title, post %></h2>
      </p>

      <p>
        发布于 <%= time_tag post.created_at, "data-local": "time-ago" %>
      </p>

    </div>
  <% end %>
</div>

<%= link_to "新建", new_post_path %>
